{% extends "layout.njk" %}

{% block content %}
    <!--ConteÃºdo-->
    <div class="content">
        <h1>{{home.best_recips}}</h1>
        <p>{{home.text}}</p>

        <img src="assets/chef.png" alt="chef">
    </div>

    <!--Mais acessadas-->
    <div class="bests">
        <h2>{{home.most_accessed}}</h2>

        <div class="cards">
            
            {% for receita in receitas %}

            <div class="card" id="{{receita.id}}" idFoto="{{receita.image}}" name="{{receita.title}}" by="{{receita.author}}">
                <div class="card-image">
                    <img src="{{receita.image}}" alt="{{receita.title}}">
                </div>
                
                <div class="card-content">
                    <p>{{receita.title}}</p>
                    <div class="card-chef">
                        <p>{{receita.author}}</p>
                    </div>
                </div>
            </div>

            {% endfor%}

        </div>
    </div>



{% endblock %}